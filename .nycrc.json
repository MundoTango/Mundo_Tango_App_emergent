{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "include": [
    "client/src/**/*.{ts,tsx}",
    "server/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/tests/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/*.d.ts",
    "**/*.config.{js,ts}",
    "**/coverage/**",
    "**/mocks/**",
    "**/fixtures/**"
  ],
  "reporter": [
    "text",
    "lcov",
    "html",
    "json"
  ],
  "sourceMap": true,
  "instrument": true,
  "cache": false,
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80,
  "report-dir": "./coverage",
  "temp-dir": "./.nyc_output",
  "watermarks": {
    "lines": [75, 90],
    "functions": [75, 90],
    "branches": [75, 90],
    "statements": [75, 90]
  }
}