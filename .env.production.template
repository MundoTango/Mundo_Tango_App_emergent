# Production Environment Configuration - Frontend Variables
# Copy this to .env.production and configure with your production values
# All frontend-accessible variables MUST be prefixed with VITE_

# ============================================
# CORE APPLICATION
# ============================================
NODE_ENV=production
VITE_APP_NAME=MundoTango
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://mundotango.life

# ============================================
# API CONFIGURATION
# ============================================
VITE_API_URL=https://api.mundotango.life
VITE_WS_URL=wss://api.mundotango.life

# ============================================
# AUTHENTICATION
# ============================================
VITE_AUTH_ENABLED=true
VITE_SOCIAL_LOGIN_ENABLED=true

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DEBUG=false

# ============================================
# THIRD-PARTY SERVICES (PUBLIC KEYS ONLY)
# ============================================

# Google Maps
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_PLAUSIBLE_DOMAIN=mundotango.life

# Error Tracking (Public DSN only)
VITE_SENTRY_DSN=https://public-key@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Stripe (Public key only)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_...

# ============================================
# CONTENT & MEDIA
# ============================================
VITE_CDN_URL=https://cdn.mundotango.life
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_MAX_FILE_SIZE=104857600

# ============================================
# INTERNATIONALIZATION
# ============================================
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,pt,fr,it,de

# ============================================
# UI/UX CONFIGURATION
# ============================================
VITE_THEME=ocean
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_THEME=light

# ============================================
# DEPLOYMENT INFO
# ============================================
VITE_DEPLOYMENT_ID=prod-001
VITE_BUILD_TIME=2025-10-17T00:00:00Z
VITE_GIT_COMMIT=production-release

# ============================================
# MONITORING & PERFORMANCE
# ============================================
VITE_ENABLE_WEB_VITALS=true
VITE_ENABLE_LIGHTHOUSE=true
VITE_PERFORMANCE_BUDGET_JS=500000
VITE_PERFORMANCE_BUDGET_CSS=100000
