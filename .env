# Life CEO & Mundo Tango Platform Environment Variables

# Life CEO & Mundo Tango Platform - Demo Configuration

# Database Configuration (Required)
DATABASE_URL=postgresql://demo_user:demo_password@localhost:5432/democeo_db

# Application Settings
NODE_ENV=development
PORT=5000

# Authentication
AUTH_BYPASS=true
SESSION_SECRET=demo-secret-key-for-development-lifeceo-platform

# Build Configuration
NODE_OPTIONS="--max_old_space_size=4096"
GENERATE_SOURCEMAP=false

# Cloudinary Configuration (Demo)
VITE_CLOUDINARY_API_KEY=demo-key
VITE_CLOUDINARY_API_SECRET=demo-secret
VITE_CLOUDINARY_CLOUD_NAME=demo-cloud

# Feature Flags
VITE_ENABLE_FEATURES=true
DEMO_MODE=true

# Disable services that require external connections
DISABLE_REDIS=true
DISABLE_ELASTICSEARCH=true
DISABLE_N8N=true

# Security bypass for demo
BYPASS_SECURITY_CHECKS=true