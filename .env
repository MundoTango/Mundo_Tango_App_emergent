# Life CEO & Mundo Tango Platform - Demo Configuration

# Database Configuration (Required) - Using MongoDB for demo
DATABASE_URL=postgresql://demo_user:demo_password@localhost:5432/democeo_db
DISABLE_DATABASE_CONNECTIONS=true
USE_MEMORY_DATABASE=true

# Application Settings
NODE_ENV=development
PORT=5000

# Authentication
AUTH_BYPASS=true
SESSION_SECRET=demo-secret-key-for-development-lifeceo-platform

# Replit Authentication (Required for deployment)
REPLIT_DOMAINS=https://localhost:3000,https://localhost:5000
REPL_ID=demo-repl-id
ISSUER_URL=https://replit.com/oidc

# Build Configuration
NODE_OPTIONS="--max_old_space_size=4096"
GENERATE_SOURCEMAP=false

# Cloudinary Configuration (Demo)
VITE_CLOUDINARY_API_KEY=demo-key
VITE_CLOUDINARY_API_SECRET=demo-secret
VITE_CLOUDINARY_CLOUD_NAME=demo-cloud

# Feature Flags
VITE_ENABLE_FEATURES=true
DEMO_MODE=true

# Disable services that require external connections
DISABLE_REDIS=true
DISABLE_ELASTICSEARCH=true
DISABLE_N8N=true

# Security bypass for demo
BYPASS_SECURITY_CHECKS=true

# OpenAI Configuration - Using your real API key
OPENAI_API_KEY=${OPENAI_API_KEY}
DISABLE_AI_AGENTS=false
