# Life CEO & Mundo Tango Platform - Demo Configuration

# Database Configuration - Atlas MongoDB for Production
DATABASE_URL=${MONGODB_URI}
MONGO_URL=${MONGODB_URI}
DISABLE_DATABASE_CONNECTIONS=false
USE_MEMORY_DATABASE=false

# Application Settings
NODE_ENV=development
PORT=5000

# Authentication
AUTH_BYPASS=true
SESSION_SECRET=demo-secret-key-for-development-lifeceo-platform

# Replit Authentication (Required for deployment)
REPLIT_DOMAINS=https://localhost:3000,https://localhost:5000
REPL_ID=demo-repl-id
ISSUER_URL=https://replit.com/oidc

# Build Configuration
NODE_OPTIONS="--max_old_space_size=4096"
GENERATE_SOURCEMAP=false

# Cloudinary Configuration - Using your real keys  
VITE_CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
VITE_CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}
VITE_CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}

# Stripe Configuration - Using your keys
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
VITE_STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}

# Google Maps - Using your key
VITE_GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}

# Supabase - Using your keys
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# Feature Flags
VITE_ENABLE_FEATURES=true
DEMO_MODE=true

# Disable services that require external connections
DISABLE_REDIS=true
DISABLE_ELASTICSEARCH=true
DISABLE_N8N=true

# Security bypass for demo
BYPASS_SECURITY_CHECKS=true

# OpenAI Configuration - Using Emergent LLM Key
OPENAI_API_KEY=sk-emergent-b629d189d80B9D02dA
DISABLE_AI_AGENTS=false
