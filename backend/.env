# ESA LIFE CEO 61x21 Framework - Backend Production Configuration
# Backend environment variables for Emergent deployment

# Database Configuration - Atlas MongoDB for Production
DATABASE_URL=${MONGODB_URI}
MONGO_URL=${MONGODB_URI}
NODE_ENV=production

# Application Settings
PORT=8001
SESSION_SECRET=${SESSION_SECRET}

# Node.js Server URL for Python Proxy
NODE_SERVER_URL=http://localhost:5000

# OpenAI Configuration - Using Emergent LLM Key
OPENAI_API_KEY=${OPENAI_API_KEY}
DISABLE_AI_AGENTS=false

# Stripe Configuration (Backend Keys)
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Google Configuration
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}

# Supabase Configuration
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_KEY}

# Cloudinary Configuration
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}

# Email Configuration
RESEND_API_KEY=${RESEND_API_KEY}

# Redis Configuration (Optional - will fallback to in-memory if not available)
REDIS_URL=${REDIS_URL}

# Feature Flags
ENABLE_FEATURES=true
DISABLE_REDIS=false
DISABLE_ELASTICSEARCH=false

# Security Configuration
BYPASS_SECURITY_CHECKS=false
AUTH_BYPASS=false

# ESA Framework Configuration
ESA_FRAMEWORK_VERSION=61x21
TOTAL_AGENTS=61
IMPLEMENTED_AGENTS=49

# Monitoring Configuration
SENTRY_DSN=${SENTRY_DSN}

# Build Configuration
NODE_OPTIONS=--max_old_space_size=4096