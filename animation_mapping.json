{
  "version": "1.0.0",
  "model": "mr-blue-avatar",
  "source": "x-bot-original.fbx",
  "target": "mr-blue-avatar.glb",
  "animations": {
    "idle": {
      "name": "Idle",
      "glbAction": "Idle",
      "duration": 3.0,
      "loop": true,
      "priority": 1,
      "triggers": ["default", "listening", "waiting"],
      "transitions": {
        "to_talking": 0.3,
        "to_gesture": 0.2
      }
    },
    "talking": {
      "name": "Talking",
      "glbAction": "Talking",
      "duration": 2.5,
      "loop": true,
      "priority": 2,
      "lipSync": true,
      "morphTargets": ["mouth_open", "jaw_open"],
      "triggers": ["speaking", "responding"],
      "transitions": {
        "to_idle": 0.5,
        "to_gesture": 0.2
      }
    },
    "gesture_point": {
      "name": "PointGesture",
      "glbAction": "PointGesture",
      "duration": 1.5,
      "loop": false,
      "priority": 3,
      "triggers": ["pointing", "directing", "showing"],
      "transitions": {
        "to_idle": 0.3,
        "to_talking": 0.3
      }
    },
    "gesture_wave": {
      "name": "WaveGesture",
      "glbAction": "WaveGesture",
      "duration": 2.0,
      "loop": false,
      "priority": 3,
      "triggers": ["greeting", "goodbye", "attention"],
      "transitions": {
        "to_idle": 0.4,
        "to_talking": 0.3
      }
    },
    "thinking": {
      "name": "Thinking",
      "glbAction": "Thinking",
      "duration": 2.0,
      "loop": true,
      "priority": 2,
      "triggers": ["processing", "analyzing", "considering"],
      "transitions": {
        "to_idle": 0.5,
        "to_talking": 0.4
      }
    },
    "error": {
      "name": "Error",
      "glbAction": "ErrorShake",
      "duration": 1.0,
      "loop": false,
      "priority": 4,
      "triggers": ["error", "problem", "issue"],
      "transitions": {
        "to_idle": 0.3
      }
    },
    "success": {
      "name": "Success",
      "glbAction": "SuccessNod",
      "duration": 1.5,
      "loop": false,
      "priority": 4,
      "triggers": ["success", "complete", "done"],
      "transitions": {
        "to_idle": 0.3
      }
    }
  },
  "stateMachine": {
    "initial": "idle",
    "states": {
      "idle": ["talking", "gesture_point", "gesture_wave", "thinking"],
      "talking": ["idle", "gesture_point", "gesture_wave"],
      "gesture_point": ["idle", "talking"],
      "gesture_wave": ["idle", "talking"],
      "thinking": ["idle", "talking"],
      "error": ["idle"],
      "success": ["idle"]
    }
  },
  "morphTargets": {
    "mouth_open": {
      "range": [0, 1],
      "default": 0
    },
    "jaw_open": {
      "range": [0, 1],
      "default": 0
    },
    "eye_blink": {
      "range": [0, 1],
      "default": 0,
      "auto": true,
      "frequency": 3.5
    },
    "smile": {
      "range": [0, 1],
      "default": 0.1
    }
  },
  "production": {
    "polyCountReduction": 0.8,
    "dracoCompression": true,
    "dracoLevel": 6,
    "targetFileSize": "< 500 KB",
    "targetFPS": 60,
    "loadTime": "< 2s"
  }
}
