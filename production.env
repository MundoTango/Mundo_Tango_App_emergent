# Life CEO & Mundo Tango Platform - Production Configuration

# Database Configuration (Required)
DATABASE_URL=postgresql://demo_user:demo_password@localhost:5432/democeo_db
DISABLE_DATABASE_CONNECTIONS=true
USE_MEMORY_DATABASE=true

# Application Settings
NODE_ENV=production
PORT=5000

# Authentication
AUTH_BYPASS=true
SESSION_SECRET=demo-secret-key-for-development-lifeceo-platform

# Replit Authentication (Required for deployment)
REPLIT_DOMAINS=https://localhost:3000,https://localhost:5000
REPL_ID=demo-repl-id
ISSUER_URL=https://replit.com/oidc

# Build Configuration
NODE_OPTIONS="--max_old_space_size=4096"
GENERATE_SOURCEMAP=false

# These will be loaded from your Emergent environment variables
# OpenAI Configuration
# OPENAI_API_KEY=<from_emergent_secrets>

# Stripe Configuration  
# STRIPE_SECRET_KEY=<from_emergent_secrets>
# STRIPE_PUBLIC_KEY=<from_emergent_secrets>

# Google Maps
# GOOGLE_MAPS_API_KEY=<from_emergent_secrets>

# Cloudinary
# CLOUDINARY_API_KEY=<from_emergent_secrets>
# CLOUDINARY_API_SECRET=<from_emergent_secrets>
# CLOUDINARY_CLOUD_NAME=<from_emergent_secrets>

# Supabase
# SUPABASE_URL=<from_emergent_secrets>
# SUPABASE_ANON_KEY=<from_emergent_secrets>

# Feature Flags
VITE_ENABLE_FEATURES=true
DEMO_MODE=false
PRODUCTION_MODE=true

# Disable services that require external connections for now
DISABLE_REDIS=true
DISABLE_ELASTICSEARCH=true
DISABLE_N8N=true

# Enable AI agents with real keys
DISABLE_AI_AGENTS=false