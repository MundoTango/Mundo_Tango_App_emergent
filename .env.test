# ESA LIFE CEO 61Ã—21 - Test Database Configuration
# This file contains environment variables for test runs
# The test database should be completely separate from development

# Test Database URL (PostgreSQL)
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/lifeceo_test

# Development Database URL (for reference - DO NOT USE IN TESTS)
# DATABASE_URL is overridden by TEST_DATABASE_URL in test environment

# Test Environment Settings
NODE_ENV=test
TEST_TIMEOUT=30000
PLAYWRIGHT_WORKERS=1

# API Settings for Tests
BASE_URL=http://localhost:5001
API_URL=http://localhost:5001/api
TEST_PORT=5001

# Test User Credentials
TEST_USER_EMAIL=test@mundotango-test.com
TEST_USER_PASSWORD=TestPass123!
TEST_ADMIN_EMAIL=admin@mundotango-test.com
TEST_ADMIN_PASSWORD=AdminPass123!

# Feature Flags for Testing
ENABLE_E2E_TESTS=true
ENABLE_INTEGRATION_TESTS=true
ENABLE_UNIT_TESTS=true
CLEANUP_TEST_DATA=true

# Test Isolation Settings
ISOLATED_TEST_DB=true
RESET_DB_BEFORE_TESTS=true
SEED_TEST_DATA=true

# Logging for Tests
LOG_LEVEL=error
DISABLE_CONSOLE_LOGS=true

# Session Configuration for Tests
SESSION_SECRET=test-session-secret-key-for-testing-only
SESSION_TIMEOUT=3600000

# Cache Settings for Tests
DISABLE_CACHE=true
CLEAR_CACHE_BEFORE_TESTS=true